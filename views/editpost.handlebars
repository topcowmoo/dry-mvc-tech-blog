<div class='container mt-4'>
  <div class='card'>
    <div class='card-body'>
      <h2 class='card-title'>Edit Post</h2>

      <form>
        <div class='form-group'>
          <label for='post-title'>Title</label>
          <input
            type='text'
            class='form-control'
            id='post-title'
            name='post-title'
            value='{{title}}'
          />
        </div>

        <div class='form-group'>
          <label for='new-post-id'></label>
          <input
            type='text'
            class='form-control'
            id='new-post-id'
            name='post-id'
            value='{{post.id}}'
          />
        </div>

        <div class='form-group'>
          <label for='post-content'>Content</label>
          <textarea
            class='form-control'
            id='post-content'
            name='post-content'
            rows='6'
          >{{content}}</textarea>
        </div>

        <button type='submit' class='btn btn-primary' id='edit-post'>Save
          Changes</button>
      </form>

    </div>
  </div>
</div>

<script src="/js/editpost.js"></script>